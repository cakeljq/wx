page {
  display: flex;
  flex-direction: column;
  height: 100%;
}

/*1.图片样式*/
.detail-img {
  height: 500rpx;
  text-align: center;
  flex-shrink: 0;
  width: 100%;
  position: relative;
}
.detail-list{
  width:100%;
  min-height: 170px;
}
.detail-list  image{
  width:500rpx;
  height:500rpx;
}
/*2.分割块样式*/
.divider{
  height:10rpx;
  background-color: #f1f1f1;
}
.detail {
  display: flex;
  flex-direction: column;
  margin-top: 15rpx;
  margin-bottom: 0rpx;
}
.detail .etitle {
  font-size: 22px;
  color: #333;
  line-height: 29px;
  padding-top: 10px;
}
.detail .ztitle{
  padding-top:40rpx;
  font-size: 14px;
  line-height: 18px;
  color:#333;
}
.detail .price {
    font-size: 22px;
    color: #C69C6D;
    padding-left: 80rpx;
}
/*选择规格*/
.detail-item{
  overflow: hidden;
  width: 100%;
}
.xueze{
  position: relative;
  height: 45prx;
  line-height: 45rpx;
  text-decoration: none;
  cursor: pointer;
  background:rgba(199,178,153,0.20);
}
.xueze text{
  font-size: 14px;
  padding-top: 15rpx;
  padding-left: 20rpx;
  color: #442818;
}
.xueze view{
  position: absolute;
  background: url("http://127.0.0.1:3000/img/Page-go.png");
  display: inline-block;
  height: 15px;
  width: 10px;
  top:8rpx;
  right:20rpx;
  margin-top: 15rpx;
  background-size: cover;
  margin-right: 15rpx;
}
.line_flag {
  width: 80rpx;
  height: 1rpx;
  display: inline-block;
  margin: 20rpx auto;
  background-color: gainsboro;
  text-align: center;
}
.line {
  width: 100%;
  height: 2rpx;
  display: inline-block;
  margin: 20rpx 0rpx;
  background-color: gainsboro;
  text-align: center;
}
.detail-nav {
  display: flex;
  flex-direction: row;
  align-items: center;
  float: left;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  right: 0;
  z-index: 1;
  width: 100%;
  height: 100rpx;
}
.button-green {
  background-color: #fff; 
  color: #442818;
}
.button-red {
  background-color:#442818; 
}
button {
  color: white;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 30rpx;
  border-radius: 5rpx;
  width: 80%;
  height: 100%;
  line-height: 80rpx;
}

.line_nav {
  width: 5rpx;
  height: 100%;
  background-color: gainsboro;
}

text {
  display: block;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  margin: 10rpx;
}
.text-remark {
  display: block;
  font-size: 25rpx;
  margin: 10rpx;
}
/*商品详情图片*/
.item-img image{
  width:100%;
}