 }
/*商品列表样式*/
.index-nav{
  display: flex;
  flex-wrap: wrap;
}
/*2:子元素弹性布局 image/text*/
.index-nav .nav-item{
  position: relative;
  height:500rpx;
  width:50%;
  box-sizing: border-box;
  /*border:1rpx solid #ddd;*/
/*item子元素弹性布局*/
  display: flex;
  flex-direction: column;     /*子元素按列布局*/
  align-items: center;        /*水平居中 垂直居中*/
  /*小程序:推荐使用字体大小使用 px*/
  font-size:13px;
  color:#442818;
  /*右侧添加边框 底部添加边框*/
}

.index-nav .nav-item:nth-child(3),.nav-item:nth-child(6),{
  border-right:0  none;
}
/*3:修改图片宽度高度*/
.index-nav image{
  width:320rpx;
  height:352rpx;
  margin-bottom:10rpx;
}
.nav-item .img_biao{
  position: absolute;
  top:10rpx;
  left: 25rpx;

}
.nav-item .img_biao image{
  width:80rpx;
  height:40rpx;
}
/*价格字体样式*/
.nav-price{
    position: absolute;
    left:70rpx;
    bottom:5rpx;
    color: #BB9772;
    display: block;
    margin-top: 5px;
}
/*购物车图片*/
.nav-card image{
  vertical-align: bottom;
  display: inline-block;
  width:40rpx;
  height:40rpx;
  position: absolute;
  right:40rpx;
  bottom:8rpx;
}